<% provide(:title, 'Log In') %>
<h1>Log in to your account</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for User.new do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %> <br>

      <%= f.label :password %>
      <%= f.password_field :password %> <br>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>